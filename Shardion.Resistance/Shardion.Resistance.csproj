<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <DisplayName>Horizon</DisplayName>
        <AssemblyName>Horizon</AssemblyName>
        <RootNamespace>Shardion.Resistance</RootNamespace>
        <Author>shardion</Author>
        <Version>1.0.0</Version>
        <ModSide>Both</ModSide>

        <HideCode>false</HideCode>
        <HideResources>false</HideResources>
        <IncludeSource>true</IncludeSource>

        <TargetFramework>net6.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <PlatformTarget>AnyCPU</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup>
        <TMLCodeAssist>enable</TMLCodeAssist>
        <NamespaceGenerator>enable</NamespaceGenerator>
    </PropertyGroup>

    <ItemGroup>
        <!-- Disabled, because Collate doesn't understand project references. -->
        <!-- <ProjectReference Include="..\Shardion.Identic\Shardion.Identic.csproj" /> -->

        <Reference Include="lib/Identic.dll"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Rejuvena.Collate" Version="1.2.3" />
    </ItemGroup>
</Project>
